<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.auth.RegisterActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/registerImg"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/app_logo"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/registerTxt"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_for_extra_benefits"
        android:textSize="@dimen/headingTextSize"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/registerImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerWithEmailBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_with_email"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/largeTextSize"
        android:background="@drawable/orange_btn_bg"
        android:padding="@dimen/largePadding"
        android:layout_marginTop="120dp"
        android:layout_marginStart="@dimen/largeMargin"
        android:layout_marginEnd="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/registerTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/registerWithPhoneNoBtn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerWithPhoneNoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_with_phone_no"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/largeTextSize"
        android:background="@drawable/orange_btn_stroke"
        android:padding="@dimen/largePadding"
        android:layout_marginStart="@dimen/largeMargin"
        android:layout_marginEnd="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/registerWithEmailBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/registerWithGoogleBtn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerWithGoogleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_with_google"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/largeTextSize"
        android:background="@drawable/orange_btn_stroke"
        android:padding="@dimen/largePadding"
        android:layout_marginStart="@dimen/largeMargin"
        android:layout_marginEnd="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/registerWithPhoneNoBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/registerWithFacebookBtn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerWithFacebookBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_with_facebook"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/largeTextSize"
        android:background="@drawable/orange_btn_stroke"
        android:padding="@dimen/largePadding"
        android:layout_marginStart="@dimen/largeMargin"
        android:layout_marginEnd="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/registerWithGoogleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/goToLoginTxt"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goToLoginTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"
        android:textSize="@dimen/smallTextSize"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_margin="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/registerWithFacebookBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>