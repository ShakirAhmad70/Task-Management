<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/mediumPadding"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/benefitCounterTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter"
        android:textColor="@color/grey"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="@dimen/mediumTextSize"
        android:layout_marginTop="@dimen/largeMargin"
        android:layout_marginStart="@dimen/xlargeMargin"
        android:layout_marginEnd="@dimen/xlargeMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/benefitImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:clipToOutline="true"
        android:src="@drawable/smart_task_management"
        android:layout_marginTop="@dimen/xlargeMargin"
        android:background="@drawable/rounded_img_bg_for_onboard"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/benefitCounterTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/benefitDescriptionTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeTextSize"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/benefitImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>