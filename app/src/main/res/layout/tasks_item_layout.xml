<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingStart="@dimen/largePadding"
    android:paddingEnd="@dimen/largePadding">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/tasksTitleChkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_alignParentStart="true"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tasksTitleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/completed_tasks"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textSize="@dimen/xlargeTextSize"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toEndOf="@id/tasksTitleChkBox"
        android:layout_toStartOf="@id/showDate"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="@string/today"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:textSize="@dimen/xlargeTextSize"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
